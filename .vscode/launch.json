{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/../_build/${workspaceFolderBasename}/tests/termUnitTests",
			"args": [
				// "--gtest_filter=TermBuilderTest.*"
				// "--gtest_filter=Benchmark.*"
				// "--gtest_filter=Reader*.*"
			],
			"externalConsole": false,
			"logging": {
				"moduleLoad": false,
				"trace": true
			},
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"cwd": "${workspaceFolder}/../_build/${workspaceFolderBasename}/tests/",
			"showDisplayString": true
		}
	]
}